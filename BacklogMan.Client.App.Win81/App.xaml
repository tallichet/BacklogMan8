<Application
    x:Class="BacklogMan.Client.App.Win81.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BacklogMan.Client.App.Win81"
    xmlns:localData="using:BacklogMan.Client.App.Win81.Data"
    RequestedTheme="Light">

  <Application.Resources>
    <!-- Application-specific resources -->
        <ResourceDictionary>
            <Color x:Key="BacklogManMainColor">#006dcc</Color>
            <x:String x:Key="AppName">BacklogMan</x:String>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="Red" />
                    <LinearGradientBrush x:Key="BackButtonForegroundThemeBrush" StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#006dcc" Offset="0" />
                        <GradientStop Color="#006dcc" Offset="1" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="ButtonForegroundThemeBrush" Color="#006dcc" />
                    <LinearGradientBrush x:Key="ButtonBackgroundThemeBrush" StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#006dcc" Offset="0" />
                        <GradientStop Color="#006dcc" Offset="1" />
                    </LinearGradientBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
           

            
        </ResourceDictionary>

    </Application.Resources>
</Application>
